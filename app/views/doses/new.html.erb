<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-3">
    <h1>Create a dose</h1>
      
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>