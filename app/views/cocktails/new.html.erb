<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-3">
    <h1>Create a cocktail</h1>
      
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :image %>
        <%= f.input :image_cache, as: :hidden %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>